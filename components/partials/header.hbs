{{!-- header.hbs - 공통 헤더 파티셜 --}}
<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="{{t 'urls.home'}}" class="flex items-center">
        <img src="{{basePath}}assets/images/logo.svg" alt="{{t 'common.logoAlt'}}" class="h-8 mr-2" onerror="this.onerror=null; this.src='data:image/svg+xml;base64,'; this.classList.add('h-8');">
        <span class="text-2xl font-bold text-blue-600">{{t 'common.title'}}</span>
      </a>
      <nav class="flex items-center">
        <ul class="flex space-x-6">
          <li><a href="{{t 'urls.home'}}" class="text-gray-700 hover:text-blue-600 font-medium {{#if (eq pageId 'home')}}active{{/if}}">{{t 'header.home'}}</a></li>
          <li><a href="{{t 'urls.convert'}}" class="text-gray-700 hover:text-blue-600 font-medium {{#if (eq pageId 'convert')}}active{{/if}}">{{t 'header.convert'}}</a></li>
          <li><a href="{{t 'urls.qrcode'}}" class="text-gray-700 hover:text-blue-600 font-medium {{#if (eq pageId 'qrcode')}}active{{/if}}">{{t 'header.qrcode'}}</a></li>
          <li><a href="{{t 'urls.timer'}}" class="text-gray-700 hover:text-blue-600 font-medium {{#if (eq pageId 'timer')}}active{{/if}}">{{t 'header.timer'}}</a></li>
          <li><a href="{{t 'urls.help'}}" class="text-gray-700 hover:text-blue-600 font-medium {{#if (eq pageId 'help')}}active{{/if}}">{{t 'header.help'}}</a></li>
          <li><a href="{{t 'urls.game'}}" class="text-gray-700 hover:text-blue-600 font-medium {{#if (eq pageId 'game')}}active{{/if}}">{{t 'header.game'}}</a></li>
        </ul>
        
        {{!-- 언어 선택기 렌더링 --}}
        {{> language-selector currentLang=currentLang languages=languages }}
      </nav>
    </div>
  </div>
</header> 