{{!-- footer.hbs - 공통 푸터 파티셜 --}}
<footer class="bg-gray-100 mt-12">
  <div class="container mx-auto px-4 py-8">
    <div class="grid md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-lg font-bold mb-4">{{t 'footer.about'}}</h3>
        <p class="text-gray-600 mb-4">{{t 'footer.description'}}</p>
      </div>
      <div>
        <h3 class="text-lg font-bold mb-4">{{t 'footer.shortcuts'}}</h3>
        <ul class="space-y-2">
          <li><a href="{{t 'urls.home'}}" class="text-gray-600 hover:text-blue-600">{{t 'header.home'}}</a></li>
          <li><a href="{{t 'urls.convert'}}" class="text-gray-600 hover:text-blue-600">{{t 'header.convert'}}</a></li>
          <li><a href="{{t 'urls.qrcode'}}" class="text-gray-600 hover:text-blue-600">{{t 'header.qrcode'}}</a></li>
          <li><a href="{{t 'urls.timer'}}" class="text-gray-600 hover:text-blue-600">{{t 'header.timer'}}</a></li>
          <li><a href="{{t 'urls.help'}}" class="text-gray-600 hover:text-blue-600">{{t 'header.help'}}</a></li>
        </ul>
      </div>
      <div>
        <h3 class="text-lg font-bold mb-4">{{t 'footer.legal'}}</h3>
        <ul class="space-y-2">
          <li><a href="{{t 'urls.privacy'}}" class="text-gray-600 hover:text-blue-600">{{t 'footer.privacy'}}</a></li>
          <li><a href="{{t 'urls.terms'}}" class="text-gray-600 hover:text-blue-600">{{t 'footer.terms'}}</a></li>
        </ul>
      </div>
    </div>
    
    <div class="border-t border-gray-200 mt-8 pt-6 text-center text-gray-500">
      <p>{{t 'footer.copyright'}}</p>
      <p class="mt-1">{{t 'footer.lastUpdate'}}</p>
    </div>
  </div>
</footer> 